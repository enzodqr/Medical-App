<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu.Menu_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_perfil"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/perfil_gradient"
                android:drawableRight="@drawable/baseline_account_circle_white_18dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="Perfil"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_agenda"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/agenda_gradient"
                android:drawableRight="@drawable/baseline_today_white_18dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="Agenda"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_medicinas"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/medicina_gradient"
                android:drawableRight="@drawable/baseline_local_pharmacy_white_18dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="Medicinas"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_alertas"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/alertas_gradient"
                android:drawableRight="@android:drawable/ic_popup_reminder"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:text="Alertas"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_farmacias"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/farmacias_gradient"
                android:drawableRight="@android:drawable/ic_dialog_map"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:text="Farmacias"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sugerencias"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sugerencias_gradient"
                android:drawableRight="@android:drawable/ic_dialog_info"
                android:paddingRight="10dp"
                android:paddingLeft="20dp"
                android:text="Sugerencias"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sos"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sos__gradient"
                android:drawableRight="@drawable/baseline_security_white_18dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="S.O.S"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sign_out_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/logout_gradient"
                android:drawableRight="@android:drawable/ic_lock_power_off"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Cerrar SesiÃ³n"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>